@model blog_DACS.Models.Post

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentPost" class="control-label"></label>
                <input asp-for="ContentPost" class="form-control" />
                <span asp-validation-for="ContentPost" class="text-danger"></span>
            </div>

              <div class="form-group">
                <label asp-for="ImagePost" class="control-label"></label>
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="ImagePost" class="text-danger"></span>
            </div>

          
           
            <div class="form-group">
                <label asp-for="IsPublic" class="control-label"></label>
                <select asp-for="IsPublic" class="form-control">
                    <option value="true">Public</option>
                    <option value="false">Private</option>
                </select>
                <span asp-validation-for="IsPublic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExistenceStatus" class="control-label"></label>
                <select asp-for="ExistenceStatus" class="form-control">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
                <span asp-validation-for="ExistenceStatus" class="text-danger"></span>
            </div>
      

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

