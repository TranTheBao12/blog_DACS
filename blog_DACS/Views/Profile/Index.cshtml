@if (Model.Count > 0)
{
    <ul>
        @foreach (var profileViewModel in Model)
        {
        
            <article class="postcard dark blue">
                <a class="postcard__img_link" asp-action="Details" asp-route-id="@profileViewModel.IdPost">
                  
                </a>
                <div class="postcard__text">
                    <h1 class="postcard__title blue"><a asp-action="Details" asp-route-id="@profileViewModel.IdPost">@profileViewModel.Title</a></h1>
                    <div class="postcard__subtitle small">
                       
                    </div>
                    <div class="postcard__bar"></div>
                    <div class="postcard__preview-txt">@profileViewModel.ContentPost</div>
                </div>
            </article>
        }
    </ul>
}
else
{
    <p>Không có bài viết nào được chia sẻ.</p>
}


