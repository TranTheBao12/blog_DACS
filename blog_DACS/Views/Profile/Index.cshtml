<form asp-controller="Search" asp-action="Indexuser" method="get" class="input-group rounded">
    <input type="search" class="form-control rounded" name="keyword" placeholder="Tìm Kiếm" aria-label="Search" aria-describedby="search-addon">
    <button class="btn btn-outline-primary" type="submit" id="search-addon">
        <i class="fas fa-search"></i>
    </button>
</form>
<div class="padding">
    <div class="col-md-8">
        <!-- Column -->
        <div class="card">
           
            <div class="card-body little-profile text-center">
                <div class="pro-img"><img src="https://i.imgur.com/8RKXAIV.jpg" alt="user"></div>
                <h3 class="m-b-0">@ViewBag.FullName</h3>

                <form method="get" action="/Profile/FavoritePosts">
                    <button type="submit" class="btn btn-primary flex-grow-1">Post yêu thích</button>
                </form>
              
                   
               
                    

                    <h3 class="m-b-0 font-light">@ViewBag.totalfavoriteuser</h3><a style="color: white; font-size: 20px">Favorite</a>


                    <h3 class="m-b-0 font-light">@ViewBag.TotalIdFollowing</h3><a style="color: white; font-size: 20px">Followers</a>


                    <h3 class="m-b-0 font-light">@ViewBag.TotalIdFollower</h3><a style="color: white; font-size: 20px">Following</a>
                    
                
                </div>
            </div>
        </div>
    </div>

