@model IEnumerable<blog_DACS.Models.User>
@{
    ViewData["Title"] = "UserAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Tên
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Gmail
            </th>
            <th>
                Năm sinh
            </th>
            <th>
                Gioi Tính
            </th>
            <th>
                Nơi sinh
            </th>
            <th>
